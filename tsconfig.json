{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist/dts",
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
}